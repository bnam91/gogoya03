{
  "name": "gogoya03",
  "version": "1.0.0",
  "description": "일렉트론 앱",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node scripts/run-electron.cjs production",
    "dev": "node scripts/run-electron.cjs development",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "fix-encoding": "node -e \"require('fs').writeFileSync('VERSION.txt', require('fs').readFileSync('VERSION.txt', 'utf8'), 'utf8')\""
  },
  "build": {
    "appId": "com.gogoya03.app",
    "productName": "Gogoya03",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "owner": "bnam91",
      "repo": "gogoya03"
    }
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.3.1",
    "electron": "^28.0.0",
    "electron-updater": "^6.6.2",
    "googleapis": "^148.0.0",
    "iconv-lite": "^0.6.3",
    "mongodb": "^6.15.0",
    "nodemailer": "^6.9.9",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  }
}
